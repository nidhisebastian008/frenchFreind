<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nidhi.basicphrases.MainActivity">

    <GridLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:columnCount="2"
        android:rowCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:onClick="playPhrase"
            android:tag="doyouspeakenglish"
            android:text="do you \nspeak\nenglish ?" />
        <Button
            android:id="@+id/button2"
            android:tag="goodevening"
            android:layout_gravity="fill"
            android:onClick="playPhrase"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="good evening"/>
        <Button
            android:id="@+id/button3"
            android:tag="hello"
            android:onClick="playPhrase"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="Hello" />
        <Button
            android:id="@+id/button4"
            android:tag="howareyou"
            android:onClick="playPhrase"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="How are you?" />
        <Button
            android:id="@+id/button5"
            android:tag="ilivein"
            android:onClick="playPhrase"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="I live in .." />
        <Button
            android:id="@+id/button6"
            android:tag="mynameis"
            android:layout_gravity="fill"
            android:onClick="playPhrase"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="My name is.." />
        <Button
            android:id="@+id/button7"
            android:tag="please"
            android:onClick="playPhrase"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="please..." />
        <Button
            android:id="@+id/button"
            android:tag="welcome"
            android:onClick="playPhrase"
            
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="welcome.." />
    </GridLayout>
</android.support.constraint.ConstraintLayout>
